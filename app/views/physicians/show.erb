      padding-top: 75px;
       }
   }
   @media (max-width: 600px) {
    h2 {
      padding-top: 150px;
      }
   }

  </style>
<div class="container">
<div class="form-box">
<div class="header text-center">
   <% if flash.has?(:message) %>
      <h2 class="text-justify"><%=flash[:message] %></h2>
   <% end %>
   <br>
   <h2>Welcome <%= @physician.username %></h2>
</div>
<br>
<br>
<section>
<div class="col-lg ml-250 ml-">
   <div class="text-justify">
     <row class="justify-content-center">
         <% @patients.each do |patient| %>
            <p class="text-justify">--->
               <label class=font-weight-bold>Username:</label>
               <%=patient.username %>
            </p>
            <row class="justify-content-center">
            <p class="text-justify">--->
               <label class=font-weight-bold>Medical History: </label>
               <%=patient.medical_history %>
            </p>
      </row>
      <row class="justify-content-center">
            <p class="text-justify">--->
               <label class=font-weight-bold>Active Problems: </label>
               <%=patient.active_problems %>
            </p>
      </row>
            <p class="text-justify">Click to edit or delete the patient below.</p>
            <br>
            <div class="text-justify"> <a class="button" href="/patients/<%=patient.id%>/edit">Edit Patient</a>
               <br>
               <br>
               <form method="post" action="/patients/<%= patient.id %>/delete">
                  <input id="hidden" type="hidden" name="_method" value="Delete">
                  <input type="submit" value="Delete"> </div>
            </form>
            <br>
            <br>
            <br>
            <%end%>
               <br>
               <br> 
            </div>
</section>
</div>
</div>
</div> 