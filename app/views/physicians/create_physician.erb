<div class="container">
<div class="header-text text-center"> 
<div class="form-group">
<form method="post" action="/physicians/signup">
<% if flash.has?(:message) %>
  <%=flash[:message] %>
<% end %>
<h1 class="h3 mb-3 fw-normal">Please Sign Up</h1>
  <label> Physician Username:
    <%=@new_user.username %>
  </label>
  <input type="text" class="form-control input-group-sm" id="floatingInput" name="username" placeholder="username">
  <br>
  <label> Physician Password:
    <%=@new_user.password %>
  </label>
  <input type="text" class="form-control input-group-sm" id="floatingInput" name="password" placeholder="password">
  <br>
  <label> Physician NPI:
    <%=@new_user.npi %>
  </label>
  <input type="text" class="form-control input-group-sm" id="floatingInput" name="npi" placeholder="npi">
  <br>
  <input type="submit" value="Submit Profile">
  <br>
  <a class="button" href="/logout">Return to Main Menu</a>
</form>
</main>
</div>
</div>
