<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h2>Welcome to your electronic health record</h2>

<nav>

  <% if session[:username] == "physician" %>
    <br>
    <a href="/physicians/<%= @physician.id %>"> Physician Profile Page </a>
    <br>
    <br>
    <br>
    <a class="button" href="/logout">Logout</a>
  <% session[:username] == "patient" %>
    <br>
    <a href="/patients/<%= @patient.id %>"> Patient Profile Page </a>
    <br>
    <br>
    <br>
    <a class="button" href="/logout">Logout</a>

  <% else %>
  <p>Please sign in below:</p>
    <br>
    <a href="/physicians/login"> Physician Sign In </a>
    <br>
    <br>
    <a href="/patients/login"> Patient Sign In </a>
    <br>
    <br>
    <br>
    <p>New Physician? Sign Up Below:</p>
    <br>
    <a href="/physicians/signup"> Create Physician Profile </a>
    <br>
  <%end %>

</nav>
