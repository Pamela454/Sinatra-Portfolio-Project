   }
   .navbar {
      border-bottom: 0.5px, transparent;
      list-style: none;
      background-color: rgba(0, 0, 0, 0.4);
      box-shadow: 0 0 10px #000;
      border-radius: 5px;
   }
   .navbar-brand {
      font-size: 30px; 
      color: #F8F8FF;
   }
   .nav-link {
      color: #F8F8FF;
      margin-top: 5px;
